{
  "name": "server",
  "version": "0.0.1",
  "description": "",
  "dependencies": {
    "@gql2ts/from-schema": "^2.0.0-4",
    "@graphql-tools/graphql-file-loader": "^6.0.11",
    "@graphql-tools/load": "^6.0.11",
    "@graphql-tools/load-files": "^6.0.11",
    "@graphql-tools/merge": "^6.0.11",
    "@graphql-tools/schema": "^6.0.11",
    "apollo-server-express": "^2.15.1",
    "bcryptjs": "^2.4.3",
    "connect-redis": "^4.0.4",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "express-rate-limit": "^5.1.3",
    "express-session": "^1.17.1",
    "graphql": "^15.2.0",
    "ioredis": "^4.17.3",
    "pg": "^8.2.1",
    "rate-limit-redis": "^2.0.0",
    "reflect-metadata": "^0.1.13",
    "sparkpost": "^2.1.4",
    "typeorm": "0.2.25",
    "uuid": "^8.2.0",
    "yup": "^0.29.1"
  },
  "devDependencies": {
    "@gql2ts/types": "^1.9.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/connect-redis": "0.0.14",
    "@types/express-rate-limit": "^5.0.0",
    "@types/express-session": "^1.17.0",
    "@types/ioredis": "^4.17.0",
    "@types/node": "^14.0.14",
    "@types/rate-limit-redis": "^1.7.1",
    "@types/sparkpost": "^2.1.4",
    "@types/uuid": "^8.0.0",
    "@types/ws": "^7.2.6",
    "@types/yup": "^0.29.3",
    "@typescript-eslint/eslint-plugin": "^3.4.0",
    "@typescript-eslint/parser": "^3.4.0",
    "copyfiles": "^2.3.0",
    "eslint": "^7.3.1",
    "eslint-config-airbnb-typescript": "^8.0.2",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "graphql-config": "^3.0.2",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "ts-node": "8.10.2",
    "ts-node-dev": "^1.0.0-pre.49",
    "typescript": "3.9.5"
  },
  "scripts": {
    "start:dev": "ts-node-dev --no-deps --respawn --poll --transpileOnly ./src/index.ts",
    "start:test": "node ./src/index.js",
    "temp:install-shared": "rimraf ./shared && copyfiles -V \"../shared/src/gateway/**/*.ts\" ./shared",
    "build": "rimraf ./dist && tsc -b",
    "postbuild": "copyfiles -V -E \"./src/**/*.graphql\" ./dist",
    "typecheck": "tsc --noEmit",
    "typecheck:watch": "tsc --noEmit --watch",
    "lint:dev": "eslint --ext .ts ./",
    "prettier:base": "prettier --parser typescript",
    "prettier:write": "npm run prettier:base -- --write \"./src/**/*.ts\"",
    "gen-schema-types": "ts-node ./src/scripts/create-types.ts",
    "dc:pre-start": "npm run temp:install-shared",
    "dc:start-dev": "npm run dc:pre-start && docker-compose up -d gateway-dev",
    "dc:start-test": "npm run dc:pre-start && docker-compose up -d gateway-test",
    "dc:down-dev": "docker-compose down -v",
    "dc:down-test": "docker-compose down -v",
    "dc:logs-dev": "docker-compose logs -f gateway-dev",
    "dc:logs-test": "docker-compose logs -f gateway-test",
    "dc:rmi-dev": "docker rmi -f lorenzofaivre/project-boilerplate/gateway-dev",
    "dc:rmi-test": "docker rmi -f lorenzofaivre/project-boilerplate/gateway-test",
    "dc:reset-dev": "npm run dc:down-dev && npm run dc:rmi-dev && npm run dc:start-dev",
    "dc:reset-test": "npm run dc:down-test && npm run dc:rmi-test && npm run dc:start-test",
    "dc:psql-dev": "docker-compose exec -u postgres gateway-db-dev psql",
    "dc:psql-test": "docker-compose exec -u postgres gateway-db-test psql"
  }
}
